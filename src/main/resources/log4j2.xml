<?xml version ="1.0" encoding="UTF-8" ?>
<Configuration status="warn">
    <Properties>
        <property name="LOG_DIR">c:\Study\bookstore_balash\log</property>
        <property name="pattern_console">%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</property>
        <property name="pattern_file">%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</property>
    </Properties>

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${pattern_console}"></PatternLayout>
        </Console>
        <File name="File1" fileName="${LOG_DIR}\text.log" bufferedIO="true">
            <PatternLayout pattern="${pattern_file}"></PatternLayout>
        </File>
    </Appenders>

    <Loggers>
        <Root level="trace">
            <AppenderRef ref="File1" level="info"/>
            <AppenderRef ref="Console" level="trace"/>
        </Root>
    </Loggers>

</Configuration>